<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_portal_main_background">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_widthPercent="8%"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:background="@drawable/portal_banner_bg"
        android:orientation="vertical">
        <ImageView android:id="@+id/tmain_portal_img"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_heightPercent="8%"
            android:src="@drawable/loading_bg"/>

            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <RadioButton
                    android:id="@+id/tmain_portal_radioButton_portal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableTop="@drawable/icon_portal_click"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="首页"
                    android:textColor="@color/white" />

                <RadioButton
                    android:id="@+id/tmain_portal_radioButton_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableTop="@drawable/icon_set_unclick"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:paddingTop="20dp"
                    android:text="设置" />

                <RadioButton
                    android:id="@+id/tmain_portal_radioButton_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableTop="@drawable/icon_help_unclick"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:textColor="@color/white"
                    android:text="帮助" />
            </RadioGroup>
    </com.zhy.android.percent.support.PercentLinearLayout>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_widthPercent="92%"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/main_fragment_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>