<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 默认分割线样式 -->
    <style name="ui_custom_horizontal_splite_line_style">
        <item name="android:background">@color/ui_splite_line_color</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="ui_custom_vertical_splite_line_style">
        <item name="android:background">@color/ui_splite_line_color</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- 默认输入框样式 -->
    <style name="ui_custom_edit_text_style">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">#cccccc</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 通用输入域标题样式 -->
    <style name="ui_custom_input_area_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 通用标题样式 -->
    <style name="ui_custom_input_title_style">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- 默认按钮样式 -->
    <style name="ui_custom_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:background">@drawable/ui_view_button</item>
    </style>
</resources>