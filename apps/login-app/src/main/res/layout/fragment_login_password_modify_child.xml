<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.hiver.ui.navigation.UINavigationBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ui:navigation_bar_title="修改密码" />
        <!-- 原密码 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/ui_custom_input_title_style"
                android:text="@string/login_title_1007" />

            <EditText
                android:id="@+id/first_login_sec_setting_old_pwd_edit_text"
                style="@style/ui_custom_edit_text_style"
                android:hint="@string/ui_edit_text_hint"
                android:inputType="textPassword"
                android:maxLength="20" />
        </LinearLayout>

        <View style="@style/ui_custom_horizontal_splite_line_style" />

        <!-- 新密码 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/ui_custom_input_title_style"
                android:text="@string/login_title_1008" />

            <EditText
                android:id="@+id/first_login_sec_setting_new_pwd_edit_text"
                style="@style/ui_custom_edit_text_style"
                android:hint="@string/ui_edit_text_hint"
                android:inputType="textPassword"
                android:maxLength="20" />
        </LinearLayout>

        <View style="@style/ui_custom_horizontal_splite_line_style" />

        <!-- 确认密码 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/ui_custom_input_title_style"
                android:text="@string/login_title_1009" />

            <EditText
                android:id="@+id/first_login_sec_setting_confirm_pwd_edit_text"
                style="@style/ui_custom_edit_text_style"
                android:hint="@string/ui_edit_text_hint"
                android:inputType="textPassword"
                android:maxLength="20" />
        </LinearLayout>

        <View style="@style/ui_custom_horizontal_splite_line_style" />

        <!-- 下一步按钮 -->
        <Button
            android:id="@+id/first_login_sec_setting_next_button"
            style="@style/ui_custom_button_style"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text="设置" />

    </LinearLayout>
</ScrollView>