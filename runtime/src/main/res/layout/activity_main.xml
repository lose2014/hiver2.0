<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_portal_background">
    <ImageView
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:scaleType="fitXY"
        app:layout_widthPercent="10%"
        android:src="@drawable/loading_bg"/>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_widthPercent="90%"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <EditText
            android:id="@+id/login_name_et"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="15%"
            app:layout_widthPercent="40%"
            app:layout_marginTopPercent="5%"
            android:layout_centerVertical="true"
            android:background="@drawable/login_stroke_selector"
            android:drawableLeft="@drawable/ui_tips_icon"
            app:layout_textSizePercent="5%"
            android:hint="帐号"
            android:drawablePadding="5dp"
            app:layout_paddingPercent="1%"
            android:paddingLeft="10dp"
            android:textSize="12sp" >
            <requestFocus />
        </EditText>
    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>